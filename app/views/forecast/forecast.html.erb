<h1>Look up the 10 day forecast for a city:</h1>
<br />
<%= form_tag('/forecast_show') do %>
		<%= label_tag(:location, "Enter in your state or country name:") %>
		<%= text_field_tag(:location) %>
		<%= label_tag(:city, "Enter in your city name (underscore issue):") %>
		<%= text_field_tag(:city) %>
		<%= label_tag(:location, "Select a date:") %>
		<%= text_field_tag(:date), :id => 'elm_id' %>
		
	<br />
    <%= submit_tag "Check It Out!", class: 'btn btn-primary' %>
<% end %>